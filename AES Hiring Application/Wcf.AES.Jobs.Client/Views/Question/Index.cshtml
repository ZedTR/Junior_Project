@model WcfAESJobs.Client.Models.QuestionView

@{
    ViewBag.Title = "Index";
}

<h2>Job Application Questions</h2>

<p>
    @Html.ActionLink("Create New Question", "Create",null,new{@class="btn btn-default"})
</p>
<table class="table table-striped">
    <tr>
        <th>
            Question Title
        </th>
        <th>
            Full Question
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.ApplicationQuestions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullQuestion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QuestionID },new{@class="btn btn-default btn-sm"}) &nbsp;
                @Html.ActionLink("Delete", "Delete", new { id = item.QuestionID }, new { @class = "btn btn-default btn-sm" })
            </td>
        </tr>
    }
   

</table>

